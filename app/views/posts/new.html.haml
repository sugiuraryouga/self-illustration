.contents.row
  .container
    = form_with(model: @post, local: true) do |form|
      %h3
        投稿する
      = form.text_field :title, placeholder: "Nickname"
      = form.text_field :image, placeholder: "Image Url"
      = form.text :content, placeholder: "text" , rows: "10"
      = form.submit "SEND"
